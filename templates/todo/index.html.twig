{% extends 'layout.html.twig' %}

{% block title %}Hello TodoController!{% endblock %}

{% block body %}
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
      {% for todo in todos%}
          <tr>
              <td> {{ todo.name }}</td>
              <td>
                  {{ todo.content }}
              </td>
              <td>
                  <a href="{{ path('delete_todo', {id: todo.id}) }}"><i class="bi bi-archive-fill"></i></a>
              </td>
          </tr>
      {% else %}
          <tr>
              <td colspan="2">Il n'existe aucun todo</td>
          </tr>
      {% endfor %}
    </table>
{% endblock %}
